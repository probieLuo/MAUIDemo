<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CocQuery.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CocQuery"
    xmlns:views="clr-namespace:CocQuery.Views"
    Shell.FlyoutBehavior="Disabled"
    xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
    Shell.NavBarIsVisible="false"
    Title="CocQuery">

    <TabBar>
        <Tab Icon="{mi:Material Icon=LineAxis}" Title="Rank">
            <ShellContent Title="Player" ContentTemplate="{DataTemplate views:PlayerRankPage}" />
            <ShellContent Title="Clan" ContentTemplate="{DataTemplate views:ClanRankPage}" />
        </Tab>
        <Tab Icon="{mi:Material Icon=Search}" Title="Search">
            <ShellContent Title="Player" Icon="{mi:Material Icon=Usb}"
                          ContentTemplate="{DataTemplate views:PlayerSearchPage}" />
            <ShellContent Title="Clan"
                          ContentTemplate="{DataTemplate views:ClanSearchPage}" />
        </Tab>
        <Tab Icon="{mi:Fluent Icon=Person16}" Title="User">
            <ShellContent Title="User" 
                          ContentTemplate="{DataTemplate views:UserPage}" />
            <ShellContent Title="Settings"
                          ContentTemplate="{DataTemplate views:SettingsPage}" />
        </Tab>
    </TabBar>

</Shell>
